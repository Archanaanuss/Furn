<%- include("../partials/adminHeader") -%>



  <div class="container-fluid">
    <div class="row h-100 align-items-center justify-content-center">
      <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-8">
        <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
          <div class="d-flex align-items-center justify-content-between mb-3">
            <a href="" class="">
              <h3 class="text-primary">
                <i class="fa fa-user-edit me-2"></i>Add New Product
              </h3>
            </a>
          </div>
          <form action="/admin/addProducts" method="post" enctype="multipart/form-data">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="floatingInput" name="name" placeholder="Product Name" />
              <label for="floatingInput">Product Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="number" class="form-control" id="floatingInput" name="price" placeholder="Price" required />
              <label for="floatingInput">Price</label>
            </div>
            <div class="form-floating mb-3">
              <input type="number" class="form-control" id="floatingInput" name="stock" placeholder="Stock" required />
              <label for="floatingInput">Stock</label>
            </div>
            <div class="form-floating mb-3">
              <select type="text" class="form-select" name="brand" id="floatingSelect"
                aria-label="Floating label select example">
                <option selected>Select</option>
                <option value="IKEA Furniture">IKEA Furniture</option>
                <option value="Godrej Interio Furniture">Godrej Interio Furniture</option>
                <option value="Durian Furniture">Durian Furniture</option>
                <option value="Zuari Furniture">Zuari Furniture</option>
                <option value="Urban Ladder Furniture">Urban Ladder Furniture</option>
                <option value="Evok Furniture">Evok Furniture</option>
              </select>
              <label for="floatingSelect">Brand Name</label>
            </div>

            <div class="form-floating mb-3">
              <select type="text" class="form-select" name="category" id="floatingSelect"
                aria-label="Floating label select example">
                <option selected>Select</option>
                <%for(let key of category){%>
                <option value="<%=key.category%>"><%=key.category%></option>
                <%}%>
                <!-- <option>Wooden</option>
                <option>Bamboo</option>
                <option>Wicker/Rattan</option>
                <option>Metal</option>
                <option>Plastic/Acrylic</option>
                <option>Glass</option>
                <option>Concrete</option>
                <option>Bombay/Blackwood</option> -->

              </select>
              <label for="floatingSelect">Category</label>
            </div>
            <div class="form-floating mb-4">
              <input type="text" class="form-control" id="floatingPassword" name="description" placeholder="Brand Name"
                required />
              <label for="floatingPassword">Description</label>
            </div>
            <div class="form-floating mb-3">
              <input type="number" class="form-control" id="floatingInput" name="rating" placeholder="Price" required />
              <label for="floatingInput">Rating</label>
            </div>
            <div class="mb-3">
              <label for="formFileMultiple" class="form-label">Product image</label>
              <input class="form-control bg-dark" type="file" id="formFileMultiple" name="productimg" multiple />
            </div>
            <!-- <div class="d-flex align-items-center justify-content-between mb-4">
              <div class="form-check">
                <input
                  type="checkbox"
                  class="form-check-input"
                  id="exampleCheck1"
  
                />
                <label class="form-check-label" for="exampleCheck1"
                  >Check me out</label
                >
              </div>
            </div> -->
            <button type="submit" class="btn btn-primary py-3 w-100 mb-4">
              Add Product
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>